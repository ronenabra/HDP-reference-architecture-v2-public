<!DOCTYPE html>
<html>

<head>
    <title>Review Consent</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<body class="container mt-5">
    <h1>Approve Consent Access</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Request Details</h5>
            <p><strong>Consent ID:</strong> <span class="text-muted">
                    <%= consent.id %>
                </span></p>
            <p><strong>Requestor:</strong>
                <%= requesterName %>
            </p>
            <p><strong>Purpose / Service:</strong>
                <%= serviceName %>
            </p>
            <p><strong>Patient ID:</strong>
                <%= consent.patient.identifier.value %>
            </p>
            <hr>
            <h5>Select Information Sources</h5>
            <form action="/ui/approve/<%= consent.id %>" method="POST">
                <% dataSources.forEach(function(ds) { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="sources" value="<%= ds.id %>" checked
                            id="ds-<%= ds.id %>">
                        <label class="form-check-label" for="ds-<%= ds.id %>">
                            <%= ds.name %>
                        </label>
                    </div>
                    <% }); %>
                        <br>
                        <div class="d-flex gap-2">
                            <button type="submit" name="action" value="approve" class="btn btn-success">Approve
                                Access</button>
                            <button type="submit" name="action" value="decline" class="btn btn-danger">Decline
                                Access</button>
                            <a href="/ui" class="btn btn-secondary">Cancel</a>
                        </div>
            </form>
        </div>
    </div>
</body>

</html>