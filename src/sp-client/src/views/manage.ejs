<!DOCTYPE html>
<html>

<head>
    <title>Manage Organization - Doctor's Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="container mt-5">
    <div class="header mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h1>Manage Organization <small class="text-muted">
                    <%= identity %>
                </small></h1>
            <a href="/?identity=<%= identity %>" class="btn btn-outline-secondary btn-sm">&larr; Back to Dashboard</a>
        </div>

        <form action="/manage" method="GET" class="d-inline-block">
            <label class="fw-bold me-2">Identity:</label>
            <select name="identity" class="form-select d-inline-block w-auto" onchange="this.form.submit()">
                <% identities.forEach(function(id) { %>
                    <option value="<%= id %>" <%=id===identity ? 'selected' : '' %>><%= id %>
                    </option>
                    <% }); %>
            </select>
        </form>
    </div>

    <% if (flash) { %>
        <div
            class="alert alert-<%= flash.type === 'error' ? 'danger' : (flash.type === 'success' ? 'success' : 'info') %>">
            <%= flash.message %>
        </div>
        <% } %>

            <% if (!orgs || orgs.length===0) { %>
                <div class="alert alert-warning">No Organization Found for this Identity (or Access Denied)</div>
                <% } else { %>

                    <h4 class="mb-3">My Organizations (<%= orgs.length %>)</h4>
                    <% orgs.forEach(function(org) { %>
                        <!-- Organization Editor -->
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white d-flex justify-content-between">
                                <span>Organization Resource: <strong>
                                        <%= org.name %>
                                    </strong> (ID: <%= org.id %>)</span>
                                <span class="badge bg-light text-dark">
                                    <%= org.type?.[0]?.coding?.[0]?.code || 'Organization' %>
                                </span>
                            </div>
                            <div class="card-body">
                                <form action="/manage/org" method="POST">
                                    <input type="hidden" name="identity" value="<%= identity %>">
                                    <input type="hidden" name="id" value="<%= org.id %>">

                                    <div class="mb-3">
                                        <label class="form-label">JSON Definition (Editable)</label>
                                        <textarea name="jsonContent" class="form-control font-monospace"
                                            rows="10"><%= JSON.stringify(org, null, 4) %></textarea>
                                        <div class="form-text">Modify fields carefully. Some fields (e.g. type, partOf)
                                            are
                                            immutable server-side.</div>
                                    </div>

                                    <!-- <button type="submit" class="btn btn-primary">Update Organization</button> -->
                                    <!-- Button removed as per requirement -->
                                    <!-- <button type="reset" class="btn btn-outline-secondary">Reset</button> -->
                                </form>
                            </div>
                        </div>
                        <% }); %>

                            <!-- Endpoints Editor -->
                            <h4 class="mb-3">Associated Endpoints (<%= endpoints.length %>)</h4>
                            <% if (endpoints.length===0) { %>
                                <div class="alert alert-info">No endpoints linked to this organization directly.</div>
                                <% } %>

                                    <% endpoints.forEach(function(ep) { %>
                                        <div class="card mb-3">
                                            <div
                                                class="card-header bg-secondary text-white d-flex justify-content-between">
                                                <span>Endpoint: <strong>
                                                        <%= ep.name || ep.address %>
                                                    </strong> (ID: <%= ep.id %>)</span>
                                                <span class="badge bg-light text-dark">
                                                    <%= ep.status %>
                                                </span>
                                            </div>
                                            <div class="card-body">
                                                <form action="/manage/endpoint" method="POST">
                                                    <input type="hidden" name="identity" value="<%= identity %>">
                                                    <input type="hidden" name="id" value="<%= ep.id %>">

                                                    <div class="mb-3">
                                                        <label class="form-label">JSON Definition</label>
                                                        <textarea name="jsonContent" class="form-control font-monospace"
                                                            rows="6"><%= JSON.stringify(ep, null, 4) %></textarea>
                                                    </div>

                                                    <button type="submit" class="btn btn-secondary">Update
                                                        Endpoint</button>
                                                </form>
                                            </div>
                                        </div>
                                        <% }); %>

                                            <% } %>

</body>

</html>